---
interface Props {
	couple: string;
	image1: string;
	image2: string;
	image3: string;
	image4: string;
	image5: string;
	image6: string;
}
const {couple, image1, image2, image3, image4, image5, image6} = Astro.props
---
<div class="container mt-5">
    <!-- Title -->
    <h3 class="text-center mb-4">{couple}</h3>

    <!-- Image Grid -->
    <div class="row">
      <!-- Image 1 -->
      <div class="col-md-4 mb-4">
        <div class="img-container">
          <img src={image1} class="img-fluid rounded border" alt="Image 1">
        </div>
      </div>
      <!-- Image 2 -->
      <div class="col-md-4 mb-4">
        <div class="img-container">
          <img src={image2} class="img-fluid rounded border" alt="Image 2">
        </div>
      </div>
      <!-- Image 3 -->
      <div class="col-md-4 mb-4">
        <div class="img-container">
          <img src={image3} class="img-fluid rounded border" alt="Image 3">
        </div>
      </div>
    </div>

    <div class="row">
      <!-- Image 4 -->
      <div class="col-md-4 mb-4">
        <div class="img-container">
          <img src={image4} class="img-fluid rounded border" alt="Image 4">
        </div>
      </div>
      <!-- Image 5 -->
      <div class="col-md-4 mb-4">
        <div class="img-container">
          <img src={image5} class="img-fluid rounded border" alt="Image 5">
        </div>
      </div>
      <!-- Image 6 -->
      <div class="col-md-4 mb-4">
        <div class="img-container">
          <img src={image6} class="img-fluid rounded border" alt="Image 6">
        </div>
      </div>
    </div>
  </div>

  <style>
    .img-container {
      height: 200px; /* Adjust the height as needed */
      overflow: hidden;
    }
  
    .img-container img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  </style>